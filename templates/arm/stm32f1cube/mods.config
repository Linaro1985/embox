package genconfig

configuration conf {
	@Runlevel(0) include embox.arch.system(core_freq=72000000)
	@Runlevel(0) include embox.arch.arm.cortexm3.bundle
	@Runlevel(0) include third_party.bsp.stmf1cube.arch
	include third_party.bsp.stmf1cube.core
	include third_party.bsp.stmf1cube.cmsis
	include embox.arch.arm.libarch

	@Runlevel(0) include embox.kernel.stack(stack_size=0x200,alignment=4)

	@Runlevel(1) include embox.driver.interrupt.cortexm_nvic(irq_table_size=32)
	@Runlevel(1) include embox.driver.clock.cortexm_systick

	@Runlevel(1) include embox.driver.serial.stm_usart_f1(baud_rate=115200, usartx=1)
	@Runlevel(1) include embox.driver.diag(impl="embox__driver__serial__stm_usart_f1")

	include embox.driver.gpio.stm32

	include embox.kernel.critical
	include embox.kernel.irq
	include embox.mem.heap_bm
	include embox.mem.static_heap(heap_size=0x400)
	include embox.mem.bitmask(page_size=64)
	include embox.mem.pool_adapter
	include embox.kernel.task.multi
	//include embox.kernel.task.resource.idesc_table(idesc_table_size=6)

	include embox.kernel.thread.thread_local_none
	include embox.kernel.thread.thread_cancel_disable
	include embox.kernel.thread.signal_stub
	include embox.kernel.timer.sleep_nosched
	include embox.kernel.sched.sched
	include embox.kernel.sched.idle_light

	include embox.kernel.lthread.lthread
	include embox.kernel.thread.core(thread_pool_size=2)

	include embox.kernel.thread.mutex
	include embox.driver.tty.tty(rx_buff_sz=16, io_buff_sz=16)
	include embox.driver.tty.task_breaking_disable

	include embox.framework.embuild_light
	include embox.compat.libc.stdio.print(support_floating=0)
}
